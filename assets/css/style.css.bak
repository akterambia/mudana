/* common code start */
*{
	box-sizing: border-box;
}
body{
	margin: 0px;
}
.container{
	width: 90%;
	margin: 0px auto;
	/* border: 1px solid tomato; */
	display: flex;
}
img{
	display: block;
	width: 100%;
	height: 100%
}
.my-20{
	margin: 20px 0px;
}
.title{
	border-bottom: 1px solid tomato;
	margin-bottom: 20px;
}
.title h2{
	color: #212529;
	font-size: 20px;
	font-weight: 700;
	font-family: 'Source Sans Pro', sans-serif;
	margin: 0px;
	padding: 20px 0px;
	display: inline-block;
	border-bottom: 1px solid tomato;
}
/* common code end */

/* nav code start */
.navbar-brand{
	width: 10%;
}
.navbar-brand a{
	color: rgba(0, 0, 0, .9);  /* a = alpha (0-0.9-1) = opecity */
	font-size: 20px;
	font-weight: 700;
	font-family: 'Playfair Display', serif;
	padding: 10px 0px;
    display: inline-block;
	text-decoration: none;
}
ul.navbar{
	display: flex;
	align-items: center;
	justify-content: space-evenly;
	width: 60%;
	margin: 0px;
	padding: 0px;
}
ul.navbar li{
	list-style: none;
}
ul.navbar li a{
	color: rgba(0, 0, 0, .7);  /* a = alpha (0-0.9-1) = opecity */
	font-size: 16px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
	padding: 10px;
    display: inline-block;
	transition: .5s all;
	text-decoration: none;
}
ul.navbar li a:hover{
	color: rgba(0, 0, 0, .9);
}
ul.navbar li a small{
	color: #fff;
	font-size: 12px;
	padding: 2px 6px;
	background: #7832E2;
	border-radius: 6px;
}
.global-button{
	display: flex;
    justify-content: end;
    width: 33%;
}
.global-button a{
	color: #03A87C;
	font-size: 16px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
	border: 1px solid #03A87C;
	padding: 4px 20px;
	margin: 10px 0px;
    display: inline-block;
	border-radius: 5px;
	transition: .5s all;
	text-decoration: none;
}
.global-button a:hover{
	color: #fff;
	background: #03A87C;
}
/* nav code end */

/* header code start */
header{
	
}
header .header-inner{
	
}
header .header-inner .header-content{
	width: 50%;
	padding: 80px 30px;
	background: #E8F3EC;
}
header .header-inner .header-content h1{
	margin: 0px;
	color: #212529; 
	font-size: 40px;
	font-weight: 700;
	font-family: 'Playfair Display', serif;
}
header .header-inner .header-content p{
	margin: 20px 0px;
	color: #212529; 
	font-size: 16px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
}
header .header-inner .header-content a{
	color: #fff;  
	background: rgba(0, 0, 0, .8);
	border-radius: 5px;
	font-size: 16px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
	padding: 8px 25px;
    display: inline-block;
	transition: .5s all;
	text-decoration: none;
}
header .header-inner .header-content a:hover{
	background: rgba(0, 0, 0, 1);
}
header .header-inner .header-poster{
	width: 50%;
}
/* header code end */

/* about section code start */
.about-section{
	margin: 40px 0px;
	padding: 40px 0px;
	background: rgba(0,0,0,.1);
}
.about-section article{
	width: 50%;
	padding-right: 30px;
}
.about-section article figure{
	margin: 0px;
}
.about-section article a{
	margin: 20px 0px 0px 0px;
	color: rgba(0, 0, 0, 1);
	font-size: 24px;
	font-weight: 700;
	font-family: 'Source Sans Pro', sans-serif;
	text-decoration: none;
	transition: .5s all;
	display: inline-block;
}
.about-section article a:hover{
	color: #03a87c; 
}
.about-section article p{
	margin: 20px 0px;
	color: #212529;
	font-size: 16px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
}
.about-section article small{
	color: #6c757d;
	font-size: 14px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
	line-height: 1.5;
	display: block;
}
.about-section aside{
	width: 50%;
}
.about-section aside .about-post{
	display: flex;
}
.about-section aside .about-post .about-post-thumbnail{
	width: 25%;
}
.about-section aside .about-post .about-post-content{
	width: 75%;
	padding-left: 20px;
}
.about-section aside .about-post .about-post-content a{
	margin: 0px 0px 10px 0px;
	color: rgba(0, 0, 0, 1);
	font-size: 16px;
	font-weight: 600;
	font-family: 'Source Sans Pro', sans-serif;
	text-decoration: none;
	transition: .5s all;
	display: inline-block;
}
.about-section aside .about-post .about-post-content a:hover{
	color: #03a87c; 
}
.about-section aside .about-post .about-post-content small{
	color: #6c757d;
	font-size: 14px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
	line-height: 2;
	display: block;
}
/* about section code end */

/* blog section code start */
.blog-section{
	
}
.blog-section .blog-content{
	width: 70%;
}
.blog-section .blog-content .blog-post{
	display: flex;
}
.blog-section .blog-content .blog-post .blog-post-content{
	width: 75%;
}
.blog-section .blog-post-content a{
	margin: 0px 0px 0px 0px;
	color: rgba(0, 0, 0, 1);
	font-size: 24px;
	font-weight: 700;
	font-family: 'Source Sans Pro', sans-serif;
	text-decoration: none;
	transition: .5s all;
	display: inline-block;
}
.blog-section .blog-post-content a:hover{
	color: #03a87c; 
	text-decoration: underline;
}
.blog-section .blog-post-content p{
	margin: 10px 0px 20px 0px;
	color: #212529;
	font-size: 16px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
}
.blog-section .blog-post-content small{
	color: #6c757d;
	font-size: 14px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
	line-height: 1.5;
	display: block;
}
.blog-section .blog-content .blog-post .blog-post-thumbnail{
	width: 25%;
	padding-right: 20px;
}
.blog-section .blog-content .blog-post .blog-post-thumbnail img{
	height: auto;
}
.blog-section aside{
	width: 30%;
}
/* blog section code end */

/* footer code start */
.footer-inner{
	justify-content: space-between;
}
.footer-inner p{
	color: #6c757d;
	font-size: 14px;
	font-weight: 400;
	font-family: 'Source Sans Pro', sans-serif;
	display: inline-block;
}
.footer-inner p span{
	color: #6c757d;
	font-size: 20px;
	font-weight: 700;
	font-family:  'Playfair Display', serif;
	display: inline-block;
	margin-right: 20px;
}
.footer-inner p a{
	color: #7832E2;
	font-size: 14px;
	font-weight: 600;
	font-family: 'Source Sans Pro', sans-serif;
	display: inline-block;
	text-decoration: none;
	transition: .5s all;
}
.footer-inner p a:hover{
	text-decoration: underline;
}
/* footer code end */
